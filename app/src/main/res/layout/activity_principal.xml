<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.PrincipalActivity">


    <Button
        android:id="@+id/btnMural"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:text="Mural"
        app:layout_constraintBottom_toBottomOf="@+id/btnClassif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClassif"
        app:layout_constraintTop_toTopOf="@+id/btnClassif" />

    <Button
        android:id="@+id/btnClassif"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="58dp"
        android:text="Classificação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMural"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>